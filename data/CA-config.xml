<?xml version="1.0" encoding="UTF-8"?>
<!--
    contains foot params for Certificate Authority.

    Will be used to create Server and Client certs.

    Has to be serialized into text representation (vars) for easy-rsa
-->
<CA>
    <!-- iso -->
    <!-- 2 letter country-code -->
    <country>DE</country>
    <province/>
    <city/>
    <org/>
    <org-unit/>
    <email/>
    <expire-days>1825</expire-days>
    <pass/>
    <!-- list of fixed values for key-size 1024, 2048... -->
    <key-size>2048</key-size>
    <server-certs>
        <server-dns-name/>
    </server-certs>
    <client-certs>
        <cert>
            <email/>
            <pass/>
            <expiry/>
        </cert>
    </client-certs>
    <defaults>
        <client expire=""/>
        <server expire=""/>
    </defaults>
</CA>